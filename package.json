{
  "name": "tolmach",
  "version": "0.1.0",
  "description": "CLI tool for video transcription and LLM-powered report generation",
  "type": "module",
  "bin": {
    "tolmach": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "setup": "bash tools/setup.sh"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "cli",
    "transcription",
    "whisper",
    "llm",
    "video"
  ],
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.44",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.3",
    "dotenv": "^17.3.1",
    "execa": "^9.6.1",
    "ora": "^9.3.0",
    "slugify": "^1.6.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^25.2.3",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@8.10.4+sha512.287edb64a7f975838884af34fed2ae46a6f06c3f4a864779f533f43844bf5abf3226a04a4278504ab118611a710d6e1714b5272a1a312f2e6f253cf587b9a554"
}
