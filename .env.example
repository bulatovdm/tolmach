# LLM Provider: claude-agent | mock
LLM_PROVIDER=claude-agent

# LLM Model (optional)
# LLM_MODEL=claude-sonnet-4-5-20250929

# Язык отчёта (ru, en, auto)
LLM_REPORT_LANGUAGE=ru

# Whisper
WHISPER_MODEL=large-v3-turbo
