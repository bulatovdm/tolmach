WHISPER_MODEL_DIR=~/.tolmach/models

# Пути
TOLMACH_OUTPUT_DIR=~/.tolmach/reports
TOLMACH_CACHE_DIR=~/.tolmach/cache
TOLMACH_TEMP_DIR=~/.tolmach/tmp
